{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["./src/*"],
      "@store/*": ["./src/store/*"],
      "@store": ["./src/store"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],
      "@layout/*": ["./src/layout/*"],
      "@layout": ["./src/layout"],
      "@pages/*": ["./src/pages/*"],
      "@pages": ["./src/pages"],
      "@styles/*": ["./src/style/*"],
      "@styles": ["./src/style"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@hooks/*": ["./src/hooks/*"],
      "@hooks": ["./src/hooks"],
      "@assets/*": ["./src/assets/*"],
      "@assets": ["./src/assets"],
      "@services/*": ["./src/services/*"],
      "@services": ["./src/services"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["src", "eslint.config.js"]
}
